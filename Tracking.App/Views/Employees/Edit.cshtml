
@{
	ViewData["Title"] = "Edit";
}
@model Tracking.Common.ViewModels.EmployeeViewModel

@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
{
	@Html.Raw($"<h1 class=\"unauthorize\">{ViewBag.Message}</h1>")
}
else
{
	<div class="container">
		<h3>Edit Employee</h3>
		<hr />
		<br />
		<form class="col-md-6 offset-3" asp-action="Edit" method="post">
			<input asp-for="Id" type="hidden" />
			<div class="form-group">
				<label asp-for="FirstName"></label>
				<input asp-for="FirstName" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="LastName"></label>
				<input asp-for="LastName" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Active"></label>
				<input asp-for="Active" type="checkbox" />
			</div>

			<div class="form-group">
				<label asp-for="ClockIn"></label>
				<input asp-for="ClockIn" type="datetime" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="ClockOut"></label>
				<input asp-for="ClockOut" type="datetime" class="form-control" />
			</div>
			<br />
			<div class="form-group text-right">
				<input type="submit" value="Update" class="btn btn-primary" />
				<a class="btn btn-default" asp-action="Index">Cancel</a>
			</div>
		</form>
	</div>
}