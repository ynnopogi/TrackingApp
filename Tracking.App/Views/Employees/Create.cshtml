
@{
    ViewData["Title"] = "Create";
}
@model Tracking.Common.ViewModels.EmployeeViewModel

@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
{
    @Html.Raw($"<h1 class=\"unauthorize\">{ViewBag.Message}</h1>")
}
else
{
    <div class="container">
        <h3>Create Employee</h3>
        <hr />
        <br />
        <form class="col-md-6 offset-3" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ClockIn"></label>
                <input asp-for="ClockIn" type="datetime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ClockOut"></label>
                <input asp-for="ClockOut" type="datetime" class="form-control" />
            </div>
            <br />
            <div class="form-group text-right">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-default" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
}